<template name="getAccessTokenFromAuthorizationCode" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="authorizationCode" description="Authorization code to be used to obtain the access token."/>
    <parameter name="clientSecret" description="The value of the key that contains the client password."/>
    <parameter name="clientId" description="The client ID of the client application."/>
    <parameter name="redirectUri" description="Specifies the reply URL of the application."/>
    <parameter name="blocking"
               description="The blocking parameter is helping connector performs the blocking invocations to MailChimp."/>
    <parameter name="accessToken"
               description="The value of the Access Token to access the MailChimp API via request."/>
    <sequence>
        <property name="uri.var.accessToken" expression="$func:accessToken"/>
        <property name="uri.var.authorizationCode" expression="$func:authorizationCode"/>
        <property name="uri.var.clientSecret" expression="$func:clientSecret"/>
        <property name="uri.var.clientId" expression="$func:clientId"/>
        <property name="uri.var.redirectUri" expression="$func:redirectUri"/>
        <property name="mailchimpBlocking" expression="$func:blocking"/>
        <payloadFactory media-type="json">
            <format>
                {
                "grant_type":"authorization_code",
                "code":"$1",
                "client_id":"$2",
                "client_secret":"$3",
                "redirect_uri":"$4"
                }
            </format>
            <args>
                <arg expression="$ctx:uri.var.authorizationCode"/>
                <arg expression="$ctx:uri.var.clientId"/>
                <arg expression="$ctx:uri.var.clientSecret"/>
                <arg expression="$ctx:uri.var.redirectUri"/>
            </args>
        </payloadFactory>
        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2"/>
        <property name="DISABLE_CHUNKING" value="true" scope="axis2"/>
        <filter source="$ctx:mailchimpBlocking" regex="true">
            <log level="custom">
                <property name="@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@" expression="get-property('mailchimpBlocking')"/>
            </log>
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="POST"
                              uri-template="https://login.mailchimp.com/oauth2/token"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <log level="custom">
                    <property name="$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$" expression="get-property('mailchimpBlocking')"/>
                </log>
                <call>
                    <endpoint>
                        <http method="POST"
                              uri-template="https://login.mailchimp.com/oauth2/token"/>
                    </endpoint>
                </call>
            </else>
        </filter>
        <property name="uri.var.accessToken" expression="json-eval($.access_token)"/>
    </sequence>
</template>